	"version": "0.2.0",
	"configurations": [
		{
			"address": "localhost",
			"localRoot": "${workspaceFolder}",
			"name": "Docker Remote Debugging",
			"port": 9173,
			"remoteRoot": "/workspaces/app",
			"request": "attach",
			"skipFiles": ["<node_internals>/**"],
			"type": "node"
		},
		{
			"type": "node",
			"request": "attach",
			"name": "Attach Program",
			"processId": "${command:PickProcess}"
		}
	]
}
